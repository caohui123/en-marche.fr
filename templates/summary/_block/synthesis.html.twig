<section class="cv__work-status background--pink">
    {% block summary_synthesis %}
        <div class="bandeau bandeau--wide bandeau--pink">
            <ul>
                <li>
                    <div class="text--normal">Recherche</div>
                    {{ summary.contributionWishLabel }}
                </li>
                <li>
                    <div class="text--normal">Disponibilité</div>
                    {{ summary.availabilities|join(' ou ')|capitalize }}
                </li>
                <li>
                    <div class="text--normal">Travail</div>
                    {{ summary.jobLocations|join(' ou ')|capitalize }}
                </li>
            </ul>
        </div>
    {% endblock %}
    {% block summary_bottom_part %}
        <div class="bandeau bandeau--wide bandeau--blue">
            <ul>
                <li>
                    <div class="text--normal">Date d'adhésion</div>
                    {{ summary.member.activatedAt|localizeddate('none', 'none', 'fr_FR', null, 'MMMM Y') }}
                </li>
                <li>
                    <div class="text--normal">Participation</div>
                    23 évènements
                </li>
                <li>
                    <div class="text--normal">Profil complété</div>
                    56%
                </li>
            </ul>
        </div>
    {% endblock %}
</section>
